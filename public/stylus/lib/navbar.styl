navbar(width,height,direction,commonColor,fontColor,activeBgColor,activeFontColor,hover=false)
  .nav
    width width
    height height
    if hover ==true
      &:hover
        background-color activeBgColor
        color activeFontColor
    ul
      li
        if direction == 'horizen'
          float left
        background-color commonColor
        a
          display block
          width 100%
          height 100%
          background-color commonColor
          color fontColor
          text-align center
          line-height height
          vertical-align middle
          &.nav-active
            background-color activeBgColor
            color:activeFontColor
          if hover == true
            &:hover
              background-color activeBgColor
              color activeFontColor

